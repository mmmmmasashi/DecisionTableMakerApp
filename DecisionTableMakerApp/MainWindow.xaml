<Window x:Class="DecisionTableMakerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:DecisionTableMakerApp"
        mc:Ignorable="d"
        Title="DecisionTableMaker" Height="800" Width="1024">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <!-- 左側の固定幅 -->
            <ColumnDefinition Width="5"/>
            <!-- GridSplitter の幅 -->
            <ColumnDefinition Width="*"/>
            <!-- 右側の可変幅 -->
        </Grid.ColumnDefinitions>

        <!-- 左側のコンテンツ -->
        <GroupBox Grid.Column="0" Header="因子水準表">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button Grid.Column="1" Width="96" Content="Excelから取込"
                        Command="{Binding ImportTableCommand}" HorizontalAlignment="Right"/>
                <TreeView Grid.Row="1" x:Name="TreeView" ItemsSource="{Binding FactorAndLevelTreeItems}">
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem">
                            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                        </Style>
                    </TreeView.ItemContainerStyle>
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate DataType="local:Person" ItemsSource="{Binding Children}">
                            <TreeViewItem Header="{Binding Name}"/>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </Grid>
        </GroupBox>

        <!-- GridSplitter -->
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ResizeBehavior="PreviousAndNext" Background="Gray"/>

        <!-- 右側のコンテンツ -->
        <Grid Grid.Column="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="180"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <GroupBox Grid.Row="0" Header="計算式">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="180"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0">
                            <TextBox Name="formulaTextBox"
                        Text="{Binding FormulaText.Value, Mode=TwoWay,
                    UpdateSourceTrigger=PropertyChanged}"/>
                            <CheckBox Content="空白は無視" IsChecked="{Binding IsIgnoreWhiteSpace.Value, Mode=TwoWay}"/>
                            <GroupBox Header="最終行に追加するテキスト">
                                <ScrollViewer Height="50">
                                    <StackPanel>
                                        <ItemsControl ItemsSource="{Binding AdditionalRowSettings}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="1列目" VerticalAlignment="Center"/>
                                                        <TextBox Height="24"  Width="100" Text="{Binding Col1Text.Value, UpdateSourceTrigger=PropertyChanged}" VerticalContentAlignment="Center"/>
                                                        <TextBlock Text="2列目" VerticalAlignment="Center"/>
                                                        <TextBox Height="24" Width="100" Text="{Binding Col2Text.Value, UpdateSourceTrigger=PropertyChanged}" VerticalContentAlignment="Center"/>
                                                        <Button Content="削除" Command="{Binding DeleteCommand}"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                        <Button Content=" + " Command="{Binding AddAdditionalRowCommand}" Width="Auto" HorizontalAlignment="Left"/>
                                    </StackPanel>
                                </ScrollViewer>
                            </GroupBox>
                        </StackPanel>
                    </Grid>
                </GroupBox>
                <GroupBox Header="結果" Grid.Row="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <GroupBox Header="構文解析結果" Grid.Row="0">
                            <RichTextBox Name="resultTextBox" IsReadOnly="True" Height="100" VerticalScrollBarVisibility="Auto">
                                <FlowDocument>
                                    <Paragraph>
                                        <Run Text="{Binding ParsedResultText.Value}"/>
                                    </Paragraph>
                                </FlowDocument>
                            </RichTextBox>
                        </GroupBox>
                        <GroupBox Header="ディシジョンテーブル" Grid.Row="1">
                            <DataGrid x:Name="DataGrid" AutoGenerateColumns="True" ItemsSource="{Binding DecisionTable.Value}" />
                        </GroupBox>
                    </Grid>
                </GroupBox>
            </Grid>
        </Grid>
    </Grid>
</Window>