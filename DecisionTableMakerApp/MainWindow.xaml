<Window x:Class="DecisionTableMakerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:DecisionTableMakerApp"
        mc:Ignorable="d"
        Title="DecisionTableMaker" Height="800" Width="1024">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <!-- 左側の固定幅 -->
            <ColumnDefinition Width="5"/>
            <!-- GridSplitter の幅 -->
            <ColumnDefinition Width="*"/>
            <!-- 右側の可変幅 -->
        </Grid.ColumnDefinitions>

        <!-- 左側のコンテンツ -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="因子水準表"/>
                <Button Grid.Column="1" Width="48" Content="取込" Command="{Binding ImportTableCommand}"/>
            </Grid>
            <TreeView Grid.Row="1" x:Name="TreeView" ItemsSource="{Binding FactorAndLevelTreeItems}">
                <TreeView.ItemContainerStyle>
                    <Style TargetType="TreeViewItem">
                        <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                    </Style>
                </TreeView.ItemContainerStyle>
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate DataType="local:Person" ItemsSource="{Binding Children}">
                        <TreeViewItem Header="{Binding Name}"/>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </Grid>

        <!-- GridSplitter -->
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ResizeBehavior="PreviousAndNext" Background="Gray"/>

        <!-- 右側のコンテンツ -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <TextBlock Text="計算式"/>
                <TextBox Name="formulaTextBox" Height="48" 
                         Text="{Binding FormulaText.Value, Mode=TwoWay,
                        UpdateSourceTrigger=PropertyChanged}"/>
                <StackPanel>
                    <CheckBox Content="空白は無視" IsChecked="{Binding IsIgnoreWhiteSpace.Value, Mode=TwoWay}"/>
                    <TextBlock Text="末尾に追加するテキスト"/>
                    <StackPanel>
                        <ItemsControl ItemsSource="{Binding AdditionalRowSettings}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="1列目"/>
                                        <TextBox Width="100" Text="{Binding Col1Text.Value, UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBlock Text="2列目"/>
                                        <TextBox Width="100" Text="{Binding Col2Text.Value, UpdateSourceTrigger=PropertyChanged}"/>
                                        <Button Content="削除" Command="{Binding DeleteCommand}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <Button Content=" + " Command="{Binding AddAdditionalRowCommand}" Width="Auto" HorizontalAlignment="Left"/>
                    </StackPanel>
                </StackPanel>
                <TextBlock Text="構文解析結果"/>
                <RichTextBox Name="resultTextBox" IsReadOnly="True" Height="200" VerticalScrollBarVisibility="Auto">
                    <FlowDocument>
                        <Paragraph>
                            <Run Text="{Binding ParsedResultText.Value}"/>
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox>
                <TextBlock Text="ディシジョンテーブル"/>
                <DataGrid x:Name="DataGrid" AutoGenerateColumns="True" ItemsSource="{Binding DecisionTable.Value}" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>